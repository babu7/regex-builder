body
	background #eee !important

hr
	margin 10px 0 !important

.grey
	color #999

label
	color #555

.group
	padding 10px
	border-top 1px dashed #fff
	border-bottom 1px dashed #aaa

#exp, #cur_exp, #flag, #input, #match, #visual
	font-size 14px
	font-family Menlo, "Consolas", monospace

#exp
	width calc(100% \- 300px)

#flag
	width 200px

#cur_exp
	color #4C9CDB
	width calc(100% \- 300px)
	cursor pointer

#exe_delay
	width 150px

#input
	width 100%
	height 200px

#match, #visual
	min-height 200px
	padding 10px
	background #fff
	border-radius 3px
	box-shadow 0 1px 3px #aaa

#visual
	white-space pre-wrap
	span
		box-shadow 0 0 0 1px #0099FF
		border-radius 4px