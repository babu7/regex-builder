input_focus()
	background #fff
	&:focus
		border-color #66afe9
		outline 0
		-webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6)
		box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6)

.grey
	color #999

body
	background-color #eee
	padding-bottom 500px

.brand
	h1
		margin 0
		font-weight 100
	a
		color #555

.group
	padding 10px 20px
	border-top 1px solid #fff
	border-bottom 1px solid #ccc

.affix
	top 0

.affix-group
	width 100%
	padding 15px
	background #eee
	box-shadow 0 1px 5px #aaa

#exp, #exp_dsp, #flags, #match, #txt
	font-size 14px
	font-family Menlo, "Consolas", monospace

#exp
	min-height 34px
	padding 6px 12px
	margin 0
	input_focus()


#exp_dsp
	display inline-block
	cursor pointer
	white-space pre-wrap
	.error
		color #F13F86

#match
	background #fff
	border-radius 3px
	box-shadow 0 1px 3px #aaa
	padding 10px
.g
	white-space pre-wrap
	background #eee
	border-radius 4px

#txt
	min-height 300px
	input_focus()

#txt
	i, b
		border-radius 4px
		font-style normal
		font-weight normal
	i
		box-shadow 0 0 0 1px #0099FF
	b
		box-shadow 0 0 0 1px #DF56AD
